<h4>Watchlist:</h4>
<div id="watchlist-container">

  {{#each watchlistData}}
  <ul id="film-list-ul">
    <li><a href="/film-details/{{this.id}}"><img class="image" src="{{this.first_url_string}}{{this.poster_path}}"
          alt="{{this.original_title}} poster" />
      </a>
      <br />

      <form action="/films/watchlist/{{this.id}}/delete" method="POST">
        <input type="submit" value="Remove" />
      </form>
    </li>
  </ul>
  {{/each}}

