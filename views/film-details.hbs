<div class="container-fluid navbar-correction">
  <div class="row align-items-center user-profile">
    {{#with data}}
      <div class="col-3 user-profile3 col-films img-container">
        <a href="/film-details/{{id}}"><img
            class="image"
            src="{{first_url_string}}{{backdrop_path}}"
            alt="{{original_title}} poster"
          />
        </a>
        <div class="overlay">
          <div class="action-icon-films">
            <a href="/film-details/{{id}}"><i
                class="bi bi-bookmark-plus icon-films"
              ></i></a>
            <a href="/film-details/{{id}}"><i
                class="bi bi-star-fill icon-films"
              ></i></a>
            <a href="/film-details/{{id}}"><i
                class="bi bi-share-fill icon-films"
                alt="share"
              ></i></a>
          </div>
        </div>
      </div>
      <div class="col-8 user-profile3">
        <h1>{{original_title}}</h1>
        <span>{{tagline}}</span>
        <p>{{overview}}</p>
        {{genres}}
      </div>
    {{/with}}
  </div>
</div>
  <form action="/film-details/{{id}}" method="POST">
    <button type="submit">Add to watch list</button>
  </form>

 <form action="/film-details/{{id}}/like" method="POST">
    <button type="submit">Like</button>
  </form>


  Genres:
  <ul>
    {{#each genres}}
      <li>{{this.name}}</li>
    {{/each}}
  </ul>
{{/with}}

Cast:

{{#each cast}}
  <ul>
    <li>{{this.name}}</li>
  </ul>
{{/each}}

{{#if viewReviewBox}}
  <h6>Review:</h6>
  <form action="/film/{{data.id}}/review" method="POST">
    <textarea class="form-control" id="review" name="review" rows="3"></textarea>

    <button type="submit">Submit</button>
  </form>
{{/if}}

{{#if dbEntry}}
  <h6>User Reviews:</h6>
  {{#each this.review}}
    <ul>
      <li class="review-list-item">USER NAME:{{this.review}}</li>

    </ul>
  {{/each}}
{{/if}}

